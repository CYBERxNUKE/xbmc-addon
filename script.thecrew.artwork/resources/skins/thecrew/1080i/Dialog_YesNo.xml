<?xml version="1.0" encoding="UTF-8"?>
<window>
	<animation effect="fade" time="500">WindowOpen</animation>
    <animation effect="fade" time="500">WindowClose</animation>
	<controls>
		<control type="group">
			<left>502</left>
			<top>363</top>
			<control type="image">
				<description>Main Background for OK Dialog</description>
				<width>916</width>
				<height>396</height>
				<texture border="">okbg.png</texture>
			</control>
			<control type="label" id="1">
				<description>Header Text</description>
				<left>4</left>
				<top>30</top>
				<width>908</width>
				<height>40</height>
				<textcolor>$INFO[Window().Property(dhtext)]</textcolor>
				<textoffsetx>15</textoffsetx>
				<align>center</align>
			</control>
			<control type="textbox" id="2">
				<description>Message Text</description>
				<left>60</left>
				<top>88</top>
				<width>825</width>
				<height>215</height>
				<autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
			</control>
			<control type="grouplist" id="5000">
				<left>4</left>
				<top>315</top>
				<width>908</width>
				<orientation>horizontal</orientation>
				<align>center</align>
				<itemgap>14</itemgap>
				<control type="button" id="5">
					<description>Yes button</description>
					<width>150</width>
					<height>50</height>
					<label>Yes</label>
					<align>center</align>
					<onleft>6</onleft>
					<onright>6</onright>
					<onup>6</onup>
					<ondown>6</ondown>
					<onclick>SetProperty(btnret, true)</onclick>
					<texturefocus colordiffuse="$VAR[HighlightBarColor]" border="5">Buttons/btn_focus.png</texturefocus>
	                <texturenofocus>Buttons/btn_nofocus.png</texturenofocus>
				</control>
				<control type="button" id="6">
					<description>No button</description>
					<width>150</width>
					<height>50</height>
					<label>No</label>
					<align>center</align>
					<onleft>5</onleft>
					<onright>5</onright>
					<onup>5</onup>
					<ondown>5</ondown>
					<onclick>SetProperty(btnret, false)</onclick>
					<texturefocus colordiffuse="$VAR[HighlightBarColor]" border="5">Buttons/btn_focus.png</texturefocus>
	                <texturenofocus>Buttons/btn_nofocus.png</texturenofocus>
				</control>
			</control>
		</control>
	</controls>
</window>