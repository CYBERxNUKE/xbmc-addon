    <animation effect="slide" start="0,0" end="0,0" time="250">WindowOpen</animation>
    <animation effect="slide" start="0,0" end="0,0" time="250">WindowClose</animation>
    <controls>
        <control type="label" id="7001">
            <description>visibility marker for selection box</description>
        </control>


<!--- DUMMY MENU START -->

