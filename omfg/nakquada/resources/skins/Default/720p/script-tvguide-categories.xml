<!-- DUMMY MENU END -->

        <control type="image"> <!-- Background of Menu Flyout Panel -->
            <posx>190</posx>
            <posy>49</posy>
            <width>310</width>
            <height>640</height>
            <texture>menu_panel.png</texture>
        </control>
        <control type="group">
            <posx>0</posx>
            <posy>320</posy>
            <width>560</width>
            <height>38</height>
            <visible>!Control.IsVisible(7001)</visible>
            <animation type="Visible">
                <effect type="slide" start="0,0" end="0,0" time="500" />
            </animation>
            <animation type="Hidden">
                <effect type="slide" start="0,0" end="0,0" time="500" />
            </animation>

            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>560</width>
                <height>160</height>
                <texture>tvguide-glasspane.png</texture>
            </control>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>560</width>
                <height>160</height>
                <texture>tvguide-glasspane.png</texture>
            </control>

            <control type="image">
                <posx>12</posx>
                <posy>20</posy>
                <width>16</width>
                <height>40</height>
                <texture>tvguide-channel-updownarrow.png</texture>
            </control>
            <control type="image">
                <posx>40</posx>
                <posy>20</posy>
                <width>500</width>
                <height>38</height>
            </control>
            <control type="button" id="7002">
                <posx>36</posx>
                <posy>20</posy>
                <width>500</width>
                <height>31</height>
                <aligny>center</aligny>
                <font>font13</font>
                <textcolor>ffffffff</textcolor>
                <label>text</label>
                <texturefocus>tvguide-program-grey-focus.png</texturefocus>
                <texturenofocus>tvguide-program-grey.png</texturenofocus>
            </control>
            <control type="label">
                <posx>36</posx>
                <posy>70</posy>
                <width>500</width>
                <height>60</height>
                <font>font13</font>
                <textcolor>ffffffff</textcolor>
                <label>$ADDON[script.tvgnuke 30310]</label>
            </control>
        </control>

        <control type="label"> <!-- Choose A Category Label -->
            <posx>20</posx>
            <posy>20</posy>
            <width>520</width>
            <height>40</height>
            <align>center</align>
            <aligny>center</aligny>
            <font>font13</font>
            <textcolor>ffffffff</textcolor>
            <label>$ADDON[script.tvgnuke 30310]</label>
            <visible>false</visible><!-- Made invisible - nakquada -->
        </control>

        <control type="list" id="7000"> <!-- Container for List of Categories -->
            <posx>198</posx>
            <posy>82</posy>
            <width>236</width>
            <height>600</height>
            <viewtype label="list">list</viewtype>
            <orientation>vertical</orientation>
            <focusposition>0</focusposition>
            <onright>7002</onright>
            <onleft>7002</onleft>

            <itemlayout width="216" height="31">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>236</width>
                    <height>31</height>
                    <!-- <texture>tvguide-program-grey.png</texture> -->
                </control>
                <control type="label"> <!-- Unselected List Text Position -->
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>200</width>
                    <height>31</height>
                    <aligny>center</aligny>
                    <font>font13</font>
                    <textcolor>ffffffff</textcolor>
                    <info>ListItem.Label</info>
                    <scroll>false</scroll> <!-- To prevent long Category names from scrolling -->
                </control>

                <control type="image"> <!-- Icon Position -->
                    <posx>210</posx>
                    <posy>6</posy>
                    <width>22</width>
                    <height>22</height>
                    <info>ListItem.Icon</info>
                </control>

            </itemlayout>
            <focusedlayout width="300" height="31"> 
                <control type="image"> <!-- Selection Box -->
                    <posx>0</posx>
                    <posy>1</posy>
                    <width>240</width>
                    <height>31</height>
                    <texture>panel_select.png</texture>
                    <visible>Control.HasFocus(7000)</visible>
                </control>

                <control type="label"><!-- Category select Text position -->
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>205</width>
                    <height>31</height>
                    <aligny>center</aligny>
                    <font>font13</font>
                    <textcolor>ffffffff</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                    <scroll>false</scroll>
                 </control>

                <control type="image"> <!-- Selected Item Icon Position -->
                    <posx>210</posx>
                    <posy>6</posy>
                    <width>22</width>
                    <height>22</height>
                    <info>ListItem.Icon</info>
                 </control>
            </focusedlayout>
        </control>

<!-- SAVE BUTTON -->
