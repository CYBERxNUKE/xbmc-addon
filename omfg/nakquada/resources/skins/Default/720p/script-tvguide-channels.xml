<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="true">6000</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>
        <control type="label" id="6001">
            <description>visibility marker for selection box</description>
        </control>


<!--- DUMMY MENU START -->

    <!-- MAIN MENU BACKGROUND (FADE OUT OVER WHOLE EPG) -->
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>800</height>
            <texture>bg_fade.png</texture>
        </control>

         <!-- MAIN MENU BG -->       
        <control type="image">
            <posx>3</posx>
            <posy>3</posy>
            <width>1274</width>
            <height>50</height>
            <texture>mainmenu_active.png</texture>
        </control>


    <!-- CATEGORIES Dummy Button (Reverse focus to simulate active status) -->
        <control type="button"> 
            <posx>233</posx><!-- OFFSET 3mm X&Y FROM ORIGINAL BUTTON ON MENU -->
            <posy>9</posy>
            <width>156</width>
            <height>34</height>
            <texturefocus>cats_off.png</texturefocus>
            <texturenofocus>cats_off.png</texturenofocus>
            <onleft>4004</onleft>
            <onright>4003</onright>
            <align>center</align>
            <aligny>center</aligny>
            <font>font15</font>
            <textcolor>ffffffff</textcolor>
            <!-- <label>$ADDON[script.tvgnuke 30309]</label> -->
        </control>


    <!-- CHANNELS Dummy Button (Reverse focus to simulate active status) -->
        <control type="button"> 
            <posx>397</posx>
            <posy>9</posy>
            <width>142</width>
            <height>34</height>
            <texturefocus>channels_on.png</texturefocus>
            <texturenofocus>channels_on.png</texturenofocus>
            <onleft>4005</onleft>
            <onright>4001</onright>
            <align>center</align>
            <aligny>center</aligny>
            <font>font15</font>
            <textcolor>ffffffff</textcolor>
            <textoffsetx>2000</textoffsetx><!-- OFFSET TO HIDE DEFAULT LABELS FROM PYTHON -->
            <textoffsety>2000</textoffsety>
            <!-- <label>$ADDON[script.tvgnuke 30307]</label> -->
            <label></label>
        </control>

        <control type="image"> <!-- DUMMY STREAM SETUP BUTTON -->
            <posx>733</posx>
            <posy>9</posy>
            <width>159</width>
            <height>34</height>
            <texture>choose_off.png</texture>
        </control>

        <control type="image"> <!-- DUMMY WATCH BUTTON -->
            <posx>900</posx>
            <posy>9</posy>
            <width>112</width>
            <height>34</height>
            <texture>watch_off.png</texture>
        </control>

         <control type="image"> <!-- DUMMY REMIND BUTTON -->
            <posx>1020</posx>
            <posy>9</posy>
            <width>115</width>
            <height>34</height>
            <texture>remind_off.png</texture>
        </control>

         <control type="image"> <!-- DUMMY QUIT BUTTON -->
            <posx>1143</posx>
            <posy>9</posy>
            <width>91</width>
            <height>34</height>
            <texture>quit_off.png</texture>
        </control>

<!-- DUMMY MENU END -->

        <control type="image"> <!-- Background of Menu Flyout Panel -->
            <posx>340</posx>
            <posy>49</posy>
            <width>310</width>
            <height>640</height>
            <texture>menu_panel.png</texture>
        </control>
        <control type="group"> <!-- Fly Out Menu for Up Down -->
            <posx>0</posx>
            <posy>320</posy>
            <width>560</width>
            <height>38</height>
            <visible>!Control.IsVisible(6001)</visible>
            <animation type="Visible">
                <effect type="slide" start="0,0" end="0,0" time="0" />
            </animation>
            <animation type="Hidden">
                <effect type="slide" start="0,0" end="0,0" time="0" />
            </animation>

           <control type="image"> <!-- Channel Slide Up and Down Box -->
                <posx>67</posx>
                <posy>0</posy>
                <width>275</width>
                <height>110</height>
                <texture>chan_edit_bg.png</texture>
            </control>

            <control type="image"><!-- Channel Name Slide Up Down -->
                <posx>0</posx>
                <posy>0</posy>
                <width>15</width>
                <height>31</height>
            </control>
            <control type="button" id="6002"> 
                <posx>76</posx>
                <posy>10</posy>
                <width>185</width>
                <height>31</height>
                <aligny>center</aligny>
                <font>font13</font>
                <textcolor>ffffffff</textcolor>
                <label>text</label>
                <texturefocus>panel_select.png</texturefocus>
                <texturenofocus>tvguide-program-grey.png</texturenofocus>
            </control>

            <control type="image"> <!-- Up Down Arrow Position -->
                <posx>265</posx>
                <posy>16</posy>
                <width>40</width>
                <height>20</height>
                <texture>tvguide-channel-updownarrow.png</texture>
            </control>

            <control type="label">
                <posx>36</posx>
                <posy>70</posy>
                <width>500</width>
                <height>60</height>
                <font>font13</font>
                <textcolor>ffffffff</textcolor>
                <!-- <label>$ADDON[script.tvgnuke 30501]</label> -->
            </control>
        </control>

        <control type="label"> <!-- Edit Channel Order and Visibility Text -->
            <posx>20</posx>
            <posy>20</posy>
            <width>520</width>
            <height>40</height>
            <align>center</align>
            <aligny>center</aligny>
            <font>font13</font>
            <textcolor>12312312</textcolor>
            <label>$ADDON[script.tvgnuke 30500]</label>
            <visible>false</visible>
        </control>

        <control type="list" id="6000">
            <posx>348</posx>
            <posy>82</posy>
            <width>236</width>
            <height>600</height>
            <viewtype label="list">list</viewtype>
            <orientation>vertical</orientation>
            <focusposition>0</focusposition>
            <onright>6003</onright>
            <onleft>6002</onleft>

            <itemlayout width="216" height="31">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>236</width>
                    <height>31</height>
                    <!-- <texture>tvguide-program-grey.png</texture> -->
                </control>
                <control type="label"> <!-- Unselected List Text Position -->
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>200</width>
                    <height>31</height>
                    <aligny>center</aligny>
                    <font>font13</font>
                    <textcolor>ffffffff</textcolor>
                    <info>ListItem.Label</info>
                    <scroll>false</scroll> <!-- To prevent long Category names from scrolling -->
                </control>

                <control type="image"> <!-- Icon Position -->
                    <posx>210</posx>
                    <posy>6</posy>
                    <width>22</width>
                    <height>22</height>
                    <info>ListItem.Icon</info>
                </control>

            </itemlayout>
            <focusedlayout width="300" height="31"> 
                <control type="image"> <!-- Selection Box -->
                    <posx>0</posx>
                    <posy>1</posy>
                    <width>240</width>
                    <height>31</height>
                    <texture>panel_select.png</texture>
                    <visible>Control.HasFocus(6000)</visible>
                </control>

                <control type="label"><!-- Channel select Text position -->
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>205</width>
                    <height>31</height>
                    <aligny>center</aligny>
                    <font>font13</font>
                    <textcolor>ffffffff</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                    <scroll>false</scroll>
                 </control>

                <control type="image"> <!-- Selected Item Icon Position -->
                    <posx>210</posx>
                    <posy>6</posy>
                    <width>22</width>
                    <height>22</height>
                    <info>ListItem.Icon</info>
                 </control>
            </focusedlayout>
        </control>

<!-- SAVE BUTTON -->
        <control type="button" id="6003">
            <posx>605</posx>
            <posy>100</posy>
            <width>36</width>
            <height>36</height>
            <align>center</align>
            <aligny>center</aligny>
            <font>font13</font>
            <textcolor>ffffffff</textcolor>
            <texturefocus>save_focus.png</texturefocus>
            <texturenofocus>save.png</texturenofocus>
            <onleft>6000</onleft>
            <onright>6002</onright>
            <onup>6004</onup>
            <ondown>6004</ondown>
        </control>

<!-- CANCEL BUTTON -->
        <control type="button" id="6004">
            <posx>605</posx>
            <posy>150</posy>
            <width>36</width>
            <height>36</height>
            <align>center</align>
            <aligny>center</aligny>
            <font>font13</font>
            <textcolor>ffffffff</textcolor>
            <texturefocus>cancel_focus.png</texturefocus>
            <texturenofocus>cancel.png</texturenofocus>
            <onleft>6000</onleft>
            <onright>6002</onright>
            <onup>6003</onup>
            <ondown>6003</ondown>
        </control>

    </controls>
</window>