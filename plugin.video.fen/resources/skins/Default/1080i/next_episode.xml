                    </control>
                </control>
            </control>
            <control type="progress" id="5000">
                <description>Progressbar</description>
                <top>242</top>
                <left>5</left>
                <width>700</width>
                <height>17</height>
                <reveal>true</reveal>
            </control>
        </control>
    </controls>
</window>
