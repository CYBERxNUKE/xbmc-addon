            <control type="image">
                <left>5</left>
                <top>5</top>
                <height>239</height>
                <width>162</width>
                <aspectratio aligny="top">stretch</aspectratio>
                <texture>$INFO[Window.Property(poster)]</texture>
                    <animation effect="fade" start="100" end="75" time="0" tween="sine">WindowOpen</animation>
            </control>
            <control type="group">
                <left>162</left>
                <control type="image">
                    <top>5</top>
