                        <left>20</left>
                        <width>510</width>
                        <height>95</height>
                        <font>font10</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <textcolor>FFB7B4BB</textcolor>
                        <label>$INFO[Window.Property(next_episode)]</label>
