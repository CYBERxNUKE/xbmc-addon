<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>common/black.png</texture>
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="80" time="200" tween="sine" easing="in" />
            </animation>
        </control>
        <control type="group">
            <left>570</left>
            <top>300</top>
            <animation type="WindowOpen" reversible="false">
                <effect type="zoom" start="50" end="100" time="200" center="910,440" tween="quadratic" easing="out" />
            </animation>
            <control type="image">
                <height>480</height>
                <width>780</width>
                <texture colordiffuse="FF4a4347">common/white.png</texture>
            </control>
            <control type="image">
                <height>100</height>
                <width>780</width>
                <texture colordiffuse="$INFO[Window.Property(tikiskins.dialog.highlight)]">common/gradients/gradient-underlayer-horizontal-flipped.png</texture>
            </control>
            <control type="image">
                <left>15</left>
                <top>15</top>
                <width>70</width>
                <height>70</height>
                <align>left</align>
                <aligny>top</aligny>
                <aspectratio aligny="top">keep</aspectratio>
                <texture colordiffuse="FFCCCCCC">common/fen.png</texture>
            </control>
            <control type="label">
                <width max="560">auto</width>
                <top>35</top>
                <left>110</left>
                <height>20</height>
                <font>font12</font>
                <textcolor>FFFFFFFF</textcolor>
                <align>center</align>
                <label>[UPPERCASE][B]$INFO[Window.Property(tikiskins.dialog.heading)][/B][/UPPERCASE]</label>
            </control>
            <control type="textbox">
                <left>40</left>
                <top>130</top>
                <width>720</width>
                <height>210</height>
                <font>font12</font>
                <textcolor>FFB7B4BB</textcolor>
                <align>left</align>
                <aligny>top</aligny>
                <label>$INFO[Window.Property(tikiskins.dialog.text)]</label>
            </control>
            <control type="button" id="10">
                <description>OK</description>
                <top>380</top>
                <left>35</left>
                <width>340</width>
                <height>70</height>
                <onleft>11</onleft>
                <onright>11</onright>
                <label>[B]$INFO[Window.Property(tikiskins.dialog.ok_label)][/B]</label>
                <font>font12</font>
                <textcolor>FFB7B4BB</textcolor>
                <focusedcolor>$INFO[Window().Property(tikiskins.dialog.highlight)]</focusedcolor>
                <texturefocus colordiffuse="FFCCCCCC">common/white.png</texturefocus>
                <texturenofocus colordiffuse="FF302F2F">common/white.png</texturenofocus>
                <align>center</align>
            </control>
            <control type="button" id="11">
                <description>OK</description>
                <top>380</top>
                <left>400</left>
                <width>340</width>
                <height>70</height>
                <onleft>10</onleft>
                <onright>10</onright>
                <label>[B]$INFO[Window.Property(tikiskins.dialog.cancel_label)][/B]</label>
                <font>font12</font>
                <textcolor>FFB7B4BB</textcolor>
                <focusedcolor>$INFO[Window().Property(tikiskins.dialog.highlight)]</focusedcolor>
                <texturefocus colordiffuse="FFCCCCCC">common/white.png</texturefocus>
                <texturenofocus colordiffuse="FF302F2F">common/white.png</texturenofocus>
                <align>center</align>
            </control>
        </control>
    </controls>
</window>
