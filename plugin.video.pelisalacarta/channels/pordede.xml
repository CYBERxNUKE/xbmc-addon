		</change>
	</changes>

	<categories>
		<category>movie</category>
		<category>serie</category>
	</categories>

	<settings>
		<id>pordedeuser</id>
		<type>text</type>
		<label>@30014</label>
		<enabled>true</enabled>
		<visible>true</visible>
		<default></default>
	</settings>
	<settings>
		<id>pordedepassword</id>
		<type>text</type>
		<hidden>true</hidden>
		<label>@30015</label>
		<enabled>!eq(-1,'')</enabled>
		<visible>true</visible>
		<default></default>
	</settings>
	<settings>
		<id>include_in_global_search</id>
		<type>bool</type>
		<label>Incluir en busqueda global</label>
		<default>false</default>
		<enabled>!eq(-1,'') + !eq(-2,'')</enabled>
		<visible>true</visible>
	</settings>
	<settings>
		<id>pordedesortlinks</id>
		<type>list</type>
		<label>Ordenar enlaces</label>
		<default>0</default>
		<enabled>true</enabled>
		<visible>!eq(-2,'') + !eq(-3,'')</visible>
		<lvalues>No</lvalues>
		<lvalues>Por Valoración</lvalues>
		<lvalues>Por Idioma</lvalues>
		<lvalues>Por Calidad</lvalues>
		<lvalues>Por Idioma y Calidad</lvalues>
		<lvalues>Por Idioma y Valoración</lvalues>
		<lvalues>Por Idioma, Calidad y Valoración</lvalues>
	</settings>
	<settings>
		<id>pordedeshowlinks</id>
		<type>list</type>
		<label>Mostrar enlaces</label>
		<default>0</default>
		<enabled>true</enabled>
		<visible>!eq(-3,'') + !eq(-4,'')</visible>
		<lvalues>Todos</lvalues>
		<lvalues>Ver online</lvalues>
		<lvalues>Descargar</lvalues>
	</settings>
	<settings>
		<id>pordedenumberlinks</id>
		<type>list</type>
		<label>Limitar número de enlaces</label>
		<default>0</default>
		<enabled>true</enabled>
		<visible>!eq(-4,'') + !eq(-5,'')</visible>
		<lvalues>No</lvalues>
		<lvalues>5</lvalues>
		<lvalues>10</lvalues>
		<lvalues>15</lvalues>
		<lvalues>20</lvalues>
		<lvalues>25</lvalues>
		<lvalues>30</lvalues>
	</settings>
</channel>
